{
  "Section Settings Checkbox": {
    "prefix": [
      "sscheckbox",
      "sscheck",
      "ssc"
    ],
    "body": [
      "{",
      "  \"type\": \"checkbox\",",
      "  \"id\": \"${1:checkbox}\",",
      "  \"label\": \"${2:Checkbox label}\",",
      "  \"default\": ${3:true}",
      "}"
    ],
    "description": "Section Settings - Checkbox"
  },
  "Section Settings Number": {
    "prefix": [
      "ssnumber",
      "ssn"
    ],
    "body": [
      "{",
      "  \"type\": \"number\",",
      "  \"id\": \"${1:number}\",",
      "  \"label\": \"${2:Number input}\",",
      "  \"default\": ${3:5}",
      "}"
    ],
    "description": "Section Settings - Number input"
  },
  "Section Settings Radio": {
    "prefix": [
      "ssradio",
      "ssr"
    ],
    "body": [
      "{",
      "  \"type\": \"radio\",",
      "  \"id\": \"${1:radio_input}\",",
      "  \"label\": \"${2:Radio buttons}\",",
      "  \"options\": [",
      "      { \"value\": \"${3:option_1}\", \"label\": \"${4:Option 1}\" },",
      "      { \"value\": \"${5:option_2}\", \"label\": \"${6:Option 2}\" }",
      "  ]",
      "}"
    ],
    "description": "Section Settings - Radio buttons"
  },
  "Section Settings Range Slider": {
